@model TaskToDo
@{
    ViewData["Title"] = "Edit task";
}
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-warning">Edit Task</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Title"></label>
			<input asp-for="Title" maxlength="16" class="form-control" />
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Description"></label>
			<input asp-for="Description" maxlength="80" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Priority_id">Priority (1-high, 2-medium, 3-low)</label>
			<input type="number" min="1" max="3" asp-for="Priority_id" class="form-control" />
			<span asp-validation-for="Priority_id" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input type="checkbox" asp-for="IsCompleted" class="btn-check" id="btncheck1" />
			<label asp-for="IsCompleted" class="btn btn-outline-primary" for="btncheck1">Is completed</label>
			<span asp-validation-for="IsCompleted" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-warning" style="width:150px">Update</button>
		<a asp-controller="TaskToDo" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}